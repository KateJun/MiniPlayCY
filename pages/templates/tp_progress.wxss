.tp_progress_cover {
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.tp_progress_cover_bg {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
}

.tp_progress_container {
  width: 404rpx;
  vertical-align: middle;
  position: relative;
  margin-bottom: 48rpx;
}

.tp_progress_bg {
  width: 100%;
  position: absolute;
  box-sizing: border-box;
  height: 24rpx;
}

.tp_progress_progress {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: inline-block;
  position: absolute;
  padding: 4rpx 6rpx 6rpx 2rpx;
}

.tp_progress_progress_container {
  width: 100%;
  height: 24rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

.tp_progress_progress_left {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  border: 6rpx #202a30 solid;
  border-radius: 20rpx;
  color: transparent;
  z-index: 100;
}

.tp_progress_text {
  font-size: 22rpx;
  color: white;
}
@import "bootstrap.min.wxss";
.demo {
  padding: 2em 0;
  background: linear-gradient(to right, #2c3b4e, #4a688a, #2c3b4e);
}

.progress {
  height: 24rpx;
  background: #262626;
  padding: 4rpx;
  overflow: visible;
  border-radius: 20px;
  border-top: 1px solid #000;
  border-bottom: 1px solid #7992a8;
  margin-top: 50px;
}

.progress .progress-bar {
  border-radius: 20px;
  position: relative;
  animation: animate-positive 2s;
}

.progress .progress-value {
  display: block;
  padding: 3px 7px;
  font-size: 13px;
  color: #fff;
  border-radius: 4px;
  background: #191919;
  border: 1px solid #000;
  position: absolute;
  top: -40px;
  right: -10px;
}

.progress .progress-value:after {
  content: "";
  border-top: 10px solid #191919;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  position: absolute;
  bottom: -6px;
  left: 26%;
}

.progress-bar.active {
  animation: reverse progress-bar-stripes 0.40s linear infinite, animate-positive 2s;
}

@-webkit-keyframes animate-positive {
  0% {
    width: 0;
  }
}

@keyframes animate-positive {
  0% {
    width: 0;
  }
}
