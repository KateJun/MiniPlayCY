/* pages/result/result.wxss */
@import "../templates/tp_progress.wxss";

.result {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.result_canvas_pic {
  width: 100%;
  height: 678rpx;
}

.result_canvas_palette {
  width: 100%;
  height: 420rpx;
  position: fixed;
  bottom: 120rpx;
  left: 0;
  z-index: 100;
}

/*底部*/
.result_bottom_container {
  display: inline-flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}

.result_btn_container {
  width: 0;
  display: inline-flex;
  position: relative;
  flex: auto;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.result_btn {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  display: inline-block;
  background-color: rgba(0, 0, 0, 0);
  border: rgba(0, 0, 0, 0) 0 solid;
  border-radius: 0;
  color: rgba(0, 0, 0, 0);
  -webkit-appearance: none;
}

.result_btn::after {
  content: none;
}

.result_btn_checked::after {
  content: "";
  position: absolute;
  width: 200%;
  height: 200%;
  left: 0;
  top: 0;
  display: inline-block;
  border-radius: 0;
  background-color: rgba(255, 255, 255, 0.5);
}

.result_divider {
  width: 0rpx;
  height: 50%;
  border: #8988bc 1rpx solid;
  position: relative;
}

.result_btn_img {
  width: 46rpx;
  height: 46rpx;
}

.result_btn_text {
  color: #d9dbe8;
  font-size: 22rpx;
  margin-top: 2rpx;
}
